@import "compass";

* {
  @include box-sizing(border-box);
}

.icon-wrapper {
  position: relative;
  float: left;
}

i {
  width: 100px;
  text-align: center;
  vertial-align: middle;
}

#stage {
  background: url(<%= asset_path 'bg1.jpg' %>);
  background-position: right;
  background-size: cover;
  color: white;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
}

#stage-careers {
  background: url(<%= asset_path 'bg2.jpg' %>);
  background-position: right;
  background-size: cover;
  color: white;
  height: 50%;
  width: 100%;
  display: flex;
  align-items: center;
}

#stage-contact {
  background: url(<%= asset_path 'bg1.jpg' %>);
  background-position: right;
  background-size: cover;
  color: white;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
}

#stage-caption {
  font-size: 1.4rem;
  font-weight: 400;
  max-width: 60rem;
  margin: 0 auto;
  text-align: center;
}

#stage-caption h1 {
  color: white;
  font-weight: bold;
  text-transform: uppercase;
}

ul li {
  list-style: none;
}

div.imagetiles {
  padding: 0px;
}

div.col-lg-3.col-md-3.col-sm-3.col-xs-6 {
  padding: 0px;
}

div.col-lg-3.col-md-3.col-sm-3.col-xs-6 img {
  object-fit: cover;
  width: 100%;
  height: 150px;
}

.btn-focus {
  font-size: 34px !important;
  border-radius: 6px !important;
  background-color: green;
  color: #fff !important;
}

.btn-focus:active:focus, .btn-focus:hover, .btn-focus:active, .btn-focus.active {
  background-color: #fff !important;
  border-color: green !important;
  color: green !important;
}

.btn-focus-alt {
  font-size: 34px !important;
  border-radius: 6px !important;
  background-color: green !important;
  color: #fff !important;
}

.btn-focus-alt:active:focus, .btn-focus-alt:hover, .btn-focus-alt:active, .btn-focus-alt.active {
  border-color: green !important;
  background-color: #fff !important;
  color: green !important;
}

.btn-focus-alt-2 {
  font-size: 34px !important;
  border-radius: 6px !important;
  background-color: green;
  color: #fff !important;
}

.btn-focus-alt-2:active:focus, .btn-focus-alt-2:hover, .btn-focus-alt-2:active, .btn-focus-alt-2.active {
  background-color: #6495ED !important;
}

.dropzone {
  background: #fff;
  border: 2px dashed #ddd;
  border-radius: 6px;
}

.dz-message {
  color: #999;
}

.dz-message:hover {
  color: #464646;
}

.dz-message h3 {
  font-size: 200%;
  margin-bottom: 15px;
}

.gradient-image {
  background:
    linear-gradient(
      90deg,
      white 30%,
      rgba(255,0,0,0.00) 100%
    ),
    url(<%= asset_path 'dotshock_321792839.jpg' %>);
}

.gradient-image-employer {
  background:
    linear-gradient(
      90deg,
      white 30%,
      rgba(255,0,0,0.00) 100%
    ),
    url(<%= asset_path 'dotshock_321792839.jpg' %>);
}

.gradient-image-contract {
  background:
    linear-gradient(
      90deg,
      white 10%,
      rgba(255,0,0,0.00) 100%
    ),
    url(<%= asset_path 'contract@1x.png' %>);
}

.stacked-figures {
  background-image: url(<%= asset_path('Choosing_arm@1x.png') %>);
  background-position: bottom;
  background-size: auto;
  left: 0;
}
