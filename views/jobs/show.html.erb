<article>
  <div class="space-90"></div>
  <div id="main-content">

    <p>
      <strong>Name:</strong>
      <%= @job.name %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @job.statusid %>
    </p>

    <p>
      <strong>Internal Description:</strong>
      <%= @job.description %>
