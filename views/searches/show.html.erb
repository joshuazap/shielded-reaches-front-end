<div class="row">
  <div class="col-4 col-sm-4 col-md-4">
    <div class="space-10"></div>
      <div class="row">
        <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= panel do %>
            <div class="panel-body">
              <%= link_to '#collapseOne', role: :button, data: { parent: '#accordion', toggle: :collapse }, aria: { controls: :collapseOne, expanded: true } do %>
              <span class="btn btn-block btn-outline-success">My searches</span>
              <% end %>
              <%= render 'advanced-search' %>
            </div>
          <% end %>
          <%= panel do %>
            <div class="panel-body">
                <% if @searches.blank? %>
                  <h5><%= "You have not performed any searches yet." %></h5>
                <% else %>
                  <%= render @searches %>
                <% end %>

                <% if @account_manager %>
                  <%= render partial: 'small_card', object: @account_manager %>
                <% else %>
                  <%= render partial: 'small_card_template' %>
                <% end %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
  <div class="col-8 col-sm-8 col-md-8">
    <article>
        <div class="row">
          <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <small><%= page_entries_info @people.results %><br /></small>
            <small><%= paginate @people.results %></small>
          </div>
        </div>

        <div class="row">
          <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <% @people.results.each do |person| %>
                <%= render partial: 'people/person_2', locals: { person: person, person_id: person.id } %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <small><%= paginate @people.results %><br /></small>
            <small><%= page_entries_info @people.results %></small>
          </div>
        </div>
      </article>
  </div>
</div>
