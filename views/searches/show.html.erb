<div class="row">
  <div class="col-4 col-sm-4 col-md-4">
    <article>
      <div class="clearfix">
        <div class="container-fluid">
          <%= link_to '#collapseOne', role: :button, data: { parent: '#accordion', toggle: :collapse }, aria: { controls: :collapseOne, expanded: true } do %>
            <span class="btn btn-block btn-primary">My searches</span>
          <% end %>
          <%= render 'advanced-search' %>
          <%= panel do %>
            <div class="panel-body">
                <% if @searches.blank? %>
                  <h5><%= "You have not performed any searches yet." %></h5>
                <% else %>
                  <%= render @searches %>
                <% end %>

                <% if @account_manager %>
                  <%= render partial: 'small_card', object: @account_manager %>
                <% else %>
                  <%= render partial: 'small_card_template' %>
                <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </article>
  </div>
  <div class="col-8 col-sm-8 col-md-8">
    <article>
        <div class="papel-right clearfix">
          <div class="container-fluid">
              <div class="row" style="font-size: 0.7em;">
                <%= page_entries_info @people.results %><br />
                <%= paginate @people.results %>
              </div>

              <div class="row">
                <% @people.results.each do |person| %>
                    <%= render partial: 'people/person', object: person %>
                <% end %>
              </div>

              <div class="row" style="font-size: 0.7em;">
                <%= paginate @people.results %><br />
                <%= page_entries_info @people.results %>
              </div>
          </div>
        </div>
      </article>
  </div>
</div>
