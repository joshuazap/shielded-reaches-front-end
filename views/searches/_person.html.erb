<div class="card results-area fill-height-card">
  <div class="card-block">
    <div class="wrapper">
      <div class="letter a">
          <div class="person_name">
          </div>

          <div class="person_title">
          </div>

          <div class="actions">
          </div>

          <div class="person_email">
          </div>

          <div class="person_phone">
          </div>

          <div class="person_employer">
          </div>

          <div class="person_links">
          </div>

          <div class="person_skills">
          </div>
      </div>

      <div class="letter b">
          <% if person.linkedin_profiles.first.picture_url.present? %>
              <%= link_to person, target: :_blank do %>
                <%= image_tag person.linkedin_profiles.first.picture_url, class: 'rounded', width: 125, height: 125, margin: '2em' %>
              <% end %>
          <% else %>
              <% link_to person, target: :_blank do %>
                  <%= image_tag "placeholder.png", class: 'rounded', width: 125, height: 125, margin: '2em' %>
              <% end %>
          <% end %>
      </div>

      <div class="letter h">
        <% if current_user && current_user.role == ("member" || "admin") %>
          <div class='js-notes'>
                <% person.notes.each do |note| %>
                    <%= content_tag :div, class: 'media', id: "note-#{note.id}" do %>
                        <div class="media-body">
                            <small>
                              <% noted_user = User.where(id: note.user_id) %>
                              <%= noted_user.first.email %> noted on <%= person.name %> <%= time_ago_in_words(note.created_at) %> ago.
                            </small>
                            <p class="note">
                              <%= link_to person, target: :_blank do %>
                                <span class="label label-primary">NOTE</span>
                              <% end %>
                              <%= note.body %>
                              <small>
                                <% if current_user.id == note.user_id %>
                                  <%= link_to "Delete", note_path(note), method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                              </small>
                            </p>
                        </div>
                    <% end %>
                <% end %>
                <h6>Add a Note</h6>
                <%= form_for [person, Note.new], html: {class: "form-group"}, authenticity_token: true do |f| %>
                    <%= f.label :body, class: 'sr-only' %>
                    <%= f.text_field :body, class: 'form-control pull-right', placeholder: "Enter a new note" %>
                    <%= f.submit "Add Note", class: 'btn btn-default pull-right btn-block' %>
                <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
