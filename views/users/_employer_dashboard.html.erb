      <small style="margin-top: 1em;">
        <h6 style="text-align: right;">Account type: <%= @user.signuprole.to_s %>
          <i class="fa fa-fw fa-lg fa-question-circle" style="font-size: 1.75em;" aria-hidden="true" data-placement="left" data-toggle="tooltip" data-html="true" title="Your guest account must be reviewed and approved by our recruiting team before you start performing searches on our active network of candidates and begin receiving targeted candidate submittals from our team."></i>
        </h6>
      </small>

      <% if session[:alerted] == true %>
        <%= render :partial => 'layouts/acceptance_modal' %>
      <% end %>

      <% if session[:modal] == true %>
        <div id="my_modal_content"></div>
      <% end %>

      <%= alert_box context: :warning, dismissable: true, id: 'alert', class: :en , data: {js: 1} do %>
        <em>Awaiting new candidate submittals</em><i class="fa fa-fw fa-lg fa-question-circle" style="font-size: 1.5em;" aria-hidden="true" data-placement="left" data-toggle="tooltip" data-html="true" title="Your guest account must be reviewed and approved by our recruiting team before you begin receiving targeted candidate submittals from our team."></i>
      <% end %>
      <div class="submittal-stage">
        <% if @candidate_submittals.any? %>

          <% @candidate_submittals.each do |candidate| %>

            <%= render partial: "submittal-person", object: candidate, locals: { person: Person.find(candidate.id) } %>

          <% end %>

        <% else %>

          <h3 class="text-center">No Candidates At This Time</h3>

        <% end %>
      </div>

      <div class="submittal-stage">
        <% if @candidate_submittals.any? %>

        <% else %>

          <% 1.times do %>
            <%= render :partial => 'submittal-slide' %>
          <% end %>

        <% end %>
      </div>
