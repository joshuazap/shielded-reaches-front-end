      <img height="1" width="1"
      src="https://www.facebook.com/tr?id=236353817100890&ev=PageView
      &noscript=1"/>
    </noscript>
    <!-- End Facebook Pixel Code -->
  </head>
  <body>
    <header id="header" class="header clearfix">
        <%= render 'header_1' %>
    </header>

    <!-- Flash Notices -->
    <div class="flash notice clearfix">
      <div class="relacion"></div>
      <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= value %>
      </div>
      <% end %>
    </div><!-- flash notices end -->

    <%= yield %>

    <footer class="footer clearfix" style="border-top: 5px solid #4B6D90;">
        <%= render 'footer' %>
    </footer>

  <!-- jQuery plugins-->
  <script src="<%= asset_path('modernizr.custom.97074.js') %>"></script>
  <script src="<%= asset_path('template-custom.js') %>"></script>
  <script src="<%= asset_path('dzsparallaxer.js') %>"></script>
  <script src="<%= asset_path('typeahead.js') %>"></script>
  </body>
</html>
