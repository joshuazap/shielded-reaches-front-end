<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CardinalHire</title>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag(*webpack_asset_paths('application')) %>
    <%= favicon_link_tag 'Asset 1@0.5x.png', :rel => 'apple-touch-icon', :type => 'image/png' %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-92212943-1', 'auto');
      ga('send', 'pageview');
    </script>
  </head>
  <body>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '1309824625773613',
          xfbml      : true,
          version    : 'v2.9',
          status     : 'true',
          xfbml      : 'false'
        });
        FB.AppEvents.logPageView();
      };
      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk/debug.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>

    <header id="header" class="header clearfix">
        <%= render 'header' %>
    </header>

    <div id="header-div" class="clearfix"></div>

    <!-- Flash Notices -->
    <div class="flash notice clearfix">
      <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= value %>
      </div>
      <% end %>
    </div><!-- flash notices end -->

    <%= yield %>

    <footer class="footer clearfix">
        <%= render 'footer' %>
    </footer>

  <!-- jQuery plugins-->
  <script src="<%= asset_path('modernizr.custom.97074.js') %>"></script>
  <script src="<%= asset_path('template-custom.js') %>"></script>
  <script src="<%= asset_path('dzsparallaxer.js') %>"></script>
  <script src="<%= asset_path('typeahead.js') %>"></script>
  </body>
</html>
