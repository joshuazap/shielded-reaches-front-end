  <% if current_user.signuprole == 'employer' && current_user.role == 'employer' %>
    <li>
      <%= link_to new_search_path, style: 'text-shadow: 1px 1px 2px rgb(255, 255, 255, 0.1); align-self: flex-end;', alt: 'Find Talent' do %>
        <i class="fa fa-fw fa-search"></i>&nbsp;Find Talent
      <% end %>
    </li>
  <% else %>
    <li class="unmoused-search">
        <%= link_to '#', class: 'unmoused-search', style: 'text-shadow: 1px 1px 2px rgb(255, 255, 255, 0.1); align-self: flex-end;', alt: 'Find Talent', title: "Your guest account must be reviewed and approved by our recruiting team before you start performing searches on our active network of candidates." do %>
          <i class="unmoused-search fa fa-fw fa-search" aria-hidden="true" data-placement="bottom" data-toggle="tooltip" data-html="true"></i>&nbsp;Find Talent
        <% end %>
    </li>
    <li class="moused-search">
        <%= link_to '#', class: 'moused-search', style: 'text-shadow: 1px 1px 2px rgb(255, 255, 255, 0.1); align-self: flex-end;', alt: 'Find Talent', title: "Your guest account must be reviewed and approved by our recruiting team before you start performing searches on our active network of candidates." do %>
            <i class="moused-search fa fa-fw fa-spinner fa-pulse" aria-hidden="true" data-placement="bottom" data-toggle="tooltip" data-html="true"></i>&nbsp;Find Talent
        <% end %>
    </li>
  <% end %>
  <li>
    <%= link_to user_dashboard_path(current_user), style: 'text-shadow: 1px 1px 2px rgb(255, 255, 255, 0.1); align-self: flex-end;', alt: 'Just for you' do %>
      <i class="fa fa-fw fa-list-alt icon-badge"></i>&nbsp;Candidates
      <% unless current_user.follow_count == 0 %>
        <span class="badge"><%= current_user.follow_count %></span>
      <% end %>
    <% end %>
  </li>
  <li>
    <%= link_to welcome_employer_intro_path, style: 'text-shadow: 1px 1px 2px rgb(255, 255, 255, 0.1); align-self: flex-end;', alt: 'Profile' do %>
      <i class="fa fa-fw fa-users"></i>&nbsp;Company
    <% end %>
  </li>
  <li>
    <%= link_to url_for(edit_user_registration_path), style: 'text-shadow: 1px 1px 2px rgb(255, 255, 255, 0.1); align-self: flex-end;', alt: 'Settings' do %>
      <i class="fa fa-fw fa-cog"></i>&nbsp;<%= current_user.first_name + ' ' + current_user.last_name[0] + '.' %>
    <% end %>
  </li>
  <li>
    <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fa fa-fw fa-sign-out"></i>&nbsp;Sign Out&nbsp;
    <% end %>
  </li>
