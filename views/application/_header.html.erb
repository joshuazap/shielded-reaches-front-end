<!-- Static navbar -->
<nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <ul class="nav navbar-nav navbar-left flexbox-container">
      <li class="pull-left" style="align-self: left;">
        <a class="navbar-brand" href="https://www.cardinalhire.com">
          <%= image_tag('logo_text@1x.png', alt: 'CardinalHire', class: 'logo-scroll', height: 'auto', width: '110em') %>
          <%= image_tag('logo_text@1x.png', alt: 'CardinalHire', class: 'logo-default', height: 'auto', width: '110em') %>
        </a>
      </li>
    </ul>
  </div>
  <div id="navbar" class="navbar-collapse collapse">
    <div id="custom_navbar">
      <ul class="nav navbar-nav navbar-right" style="display: flex; align-items: center; justify-content: center;">
        <% if current_user %>
          <% if current_user.role == 'admin' %>
            <%= render 'admin_navbar' %>
          <% elsif current_user.role == 'member' %>
            <%= render 'member_navbar' %>
          <% elsif current_user.role == 'guest' && current_user.signuprole == 'talent' %>
            <%= render 'guest_navbar' %>
          <% elsif current_user.role == 'guest' && current_user.signuprole == 'employer' %>
            <%= render 'employer_navbar' %>
          <% elsif current_user.role == 'guest' && current_user.signuprole == 'recruiter' %>
            <%= render 'recruiter_navbar' %>
          <% elsif current_user.role == 'talent' %>
            <%= render 'job_seeker_navbar' %>
          <% elsif current_user.role == 'employer' %>
            <%= render 'employer_navbar' %>
          <% elsif current_user.role == 'recruiter' %>
            <% render 'recruiter_navbar' %>
          <% else %>
            <%= render 'guest_navbar' %>
          <% end %>
        <% else %>
          <%= render 'logged_out_navbar' %>
        <% end %>
      </ul>
    </div>
  </div>
</nav><!--static nav-collapse end-->

