<article>
  <div style="justify-content: left; align-items: left;">
        <h2>Add a resume</h2>
        <h3>When CardinalHire matches you to employers in our network, they can apply to interview you!</h3>
        <br />
        <h4>In order to make sure you put your best foot forward, please attach your latest resume.</h4>
        <%= simple_form_for current_user, :url => wizard_path, :method => :put, html: { multipart: true, class: "dropzone" } do |f| %>
          <div class="field dropzone-previews">
            <%= f.input :resume, as: :file %>
          </div>
          <%= f.submit 'Next', :class => 'btn btn-primary' %><br />
          <%= link_to 'Previous step', previous_wizard_path %> | <%= link_to 'Skip for now', next_wizard_path %>
        <% end %>
    <div class="space-10"></div>
  </div>
</article>
