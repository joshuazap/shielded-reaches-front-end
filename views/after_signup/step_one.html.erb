<div class="container-fluid">
  <div class="row align-items-center">
  <div class="col col-xs-12 col-sm-12 col-md-12 col-lg-12 align-self-center">
    <article>
      <h2>Getting Started</h2>
      <h3>Thanks for signing up!</h3>
      <h4>While we get your account setup, we will ask you background questions about yourself and your goals.</h4>
      <br />
      <%= simple_form_for(current_user, :url => wizard_path, :method => :put) do |f| %>
        <%= f.input :signuprole, label: "Which type of account do you want to setup on CardinalHire?", as: :radio_buttons, collection: [['talent', 'Job Seeker'], ['employer', 'Employer'], ['recruiter', 'Recruiter']], label_method: :second, value_method: :first, selected: current_user.signuprole %>
        <br />
        <%= f.submit 'Next', :class => 'btn btn-primary' %><br />
      <% end %>
    </article>
  </div>
</div>
