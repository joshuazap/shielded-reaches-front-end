<div class="row">
  <div class="col-12 col-sm-12 col-md-12 col-centered">
    <article>
      <div class="papel clearfix">
        <div class="container-fluid">
            <div class="col-md-12 col-centered">
              <h3 class="text-center">Log In</h3>


              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.input :email, as: :email, autofocus: true %>
              </div>

              <div class="field">
                <%= f.input :password, as: :password, autocomplete: "off" %>
              </div>

              <div class="field">
                <%= f.input :remember_me, as: :boolean, label: "Remember my email next time" %>
              </div>

              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-success btn-block' %>
              </div>
              <% end %>

              <div class="" style="margin: 1rem; padding: 1rem; background: rgb(196, 30, 58, 0.25); border-radius: 2px;">
                <p style="color: rgb(102, 102, 102);">We have updated our <%= link_to 'Privacy Policy', welcome_privacy_path %> and <%= link_to 'Terms of Service', welcome_tos_path %>.  By continuing to use our service, you accept these policies and terms.</p>
              </div>

              <%= render "devise/shared/links" %>
            </div>
        </div>
      </div>
    </article>
  </div>
</div>
