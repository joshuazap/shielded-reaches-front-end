<article>
  <div class="row">
  <div class="col-4 col-sm-4 col-md-4">
      <div class="clearfix">
        <div class="container-fluid">
          <% if @account_manager %>
            <%= render partial: 'small_card', object: @account_manager %>
          <% else %>
            <%= render partial: 'users/small_card_template' %>
          <% end %>
        </div>
      </div>
  </div>
  <div class="col-8 col-sm-8 col-md-8">
        <div class="papel-right clearfix">
          <div class="container-fluid">

              <div class="row">
                <div class="col-sm-3">
                  <ul class="nav nav-pills nav-stacked">
                    <p class="lead">
                      <%= link_to 'Start conversation', new_message_path, class: 'btn btn-success' %>
                    </p>
                    <%= mailbox_section 'inbox', @box %>
                    <%= mailbox_section 'sent', @box %>
                    <%= mailbox_section 'trash', @box %>
                  </ul>
                </div>

                <div class="col-sm-9">
                    <% if @box == 'trash' %>
                    <p>
                      <%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete,
                                  data: {confirm: 'Are you sure?'} %>
                    </p>
                    <% end %>
                    <ul class="list-group">
                          <%= render partial: 'conversations/conversation', collection: @conversations %>
                    </ul>

                    <%= will_paginate %>
                  </div>
                </div>
          </div>
        </div>
    </div>
  </div>
</article>
