<section id="home" class="dzsparallaxer auto-init dzsparallaxer---window-height use-loading" style="position: relative; height: 500px;" data-options="{  mode_scroll: 'normal' }">
    <div class="gradient-image-contract divimage dzsparallaxer--target " style="width: 100%; height: 100%; background-size: cover;">
        <div class="hero-parallax">
            <div class="hero-inner">
                <div class="hero-content">
                    <div class="container text-center">
                        <div class="row">
                            <div class="col-sm-10 col-sm-offset-1">
                                <div class="hero-static">
                                  <div class="row">
                                    <div class="col col-xs-6 col-sm-6 col-md-6 col-lg-6 pull-left">
                                      <div style="padding-bottom: 1em;"><%= image_tag('Asset 1.png', alt: 'CardinalHire', height: 'auto', width: '60em') %>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="row">
                                      <div class="col col-xs-6 col-sm-6 col-md-6 col-lg-6 pull-left" style="margin: 1em; padding: 1em; background-color: #2B4A73; opacity: 30%; border-radius: 6px; color: #fff;">
                                        <div>
                                          <h2 style="color: #fff;">Find work today.</h2>
                                          <p class="lead">
                                              Top tech talent meets top tech companies.
                                          </p>
                                        </div>
                                      </div>
                                  </div>

                                  <div class="row">
                                    <div class="col col-xs-6 col-sm-6 col-md-6 col-lg-6 pull-left">
                                        <div class="row list-inline">
                                          <li class="list-inline-item">
                                            <% if current_user %>
                                                <%= link_to "Recruit Top Talent", user_dashboard_path(current_user), class: "btn btn-primary", style: "margin: 1em; color: #fff;" %>
                                            <% else %>
                                                <%= link_to "Recruit Top Talent", welcome_new_employer_path, class: "btn btn-primary", style: "margin: 1em; color: #fff;" %>
                                            <% end %>
                                          </li>
                                          <li class="list-inline-item">
                                            <% if current_user %>
                                                <%= link_to "Find Contract Work", user_dashboard_path(current_user), class: "btn btn-primary", style: "background-color: $skin-color-blue; color: #fff; margin: 1em; align-self: center;"%>
                                            <% else %>
                                                <%= link_to "Find Contract Work", welcome_new_recruiter_path, class: "btn btn-primary", style: "background-color: $skin-color-blue; color: #fff; margin: 1em; align-self: center;"%>
                                            <% end %>
                                          </li>
                                        </div>


                                          </div>
                                          </div>
                                        </div>
                                      </div>
                                  </div>
                                </div>
                            </div>
                        </div>
                    </div><!--container-->
                </div><!--hero content-->
            </div><!--hero inner-->
        </div><!--parallax hero-->
    </div><!--parallax image div-->
</section>

<div class="cta-skin-blue">
    <div class="row">
        <div class="col-12 col-xs-12 col-sm-12 col-md-12 pull-right">
          <div class="container-fluid" style="align-items: center;">
            <div class="text-center">
            <h2 style="color: white;">Looking for contract work?</h2>
            <p class="lead">
              <ul style="color: white;">
                <li style="list-style: none;">Apply privately to 34,456 Startup jobs with one application!</li>
              </ul>
              <div class="col-6 col-xs-6 col-sm-6 col-md-6 col-lg-6 center-block" style="width: 50%; float: none;">
                <% if current_user %>
                  <%= simple_form_for Lead.new, remote: true do |f| %>
                    <div class="row">
                      <div class="col-lg-6">
                          <div class="input-group" style="border-radius: 6px; background-color: #fff; border-radius: 6px;">
                            <%= f.input :email, required: true, label: false, placeholder: "Enter your email to get started" %>
                            <%= f.input :device, as: :hidden %>
                            <%= f.input :name, as: :hidden %>
                            <%= f.input :accepts, as: :hidden, input_html: { value: '1' } %>
                            <%= f.input :accepts_date, as: :hidden, input_html: { value: Date.today } %>
                            <span class="input-group-btn">
                                <%= f.button :submit, "Get a job" %>
                            </span>
                          </div><!-- /input-group -->
                      </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                  <% end %>
                <% else %>
                  <%= simple_form_for Lead.new, remote: true, style: "background-color: #fff;" do |f| %>
                    <div class="row">
                      <div class="col-lg-6">
                          <div class="input-group" style="border-radius: 6px; background-color: #fff; border-radius: 6px;">
                            <%= f.input :email, required: true, label: false, placeholder: "Enter your email to get started" %>
                            <%= f.input :device, as: :hidden %>
                            <%= f.input :name, as: :hidden %>
                            <%= f.input :accepts, as: :hidden, input_html: { value: '1' } %>
                            <%= f.input :accepts_date, as: :hidden, input_html: { value: Date.today } %>
                            <span class="input-group-btn">
                                <%= f.button :submit, "Get a job" %>
                            </span>
                          </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                      </div><!-- /.row -->
                  <% end %>
                <% end %>
              </div>
            </p>
            </div>
          </div>
        </div>
    </div>
</div>
